
<%= form_for @picks.new, remote: true, url: board_player_picks_path(@board, @board.pick_player), :html => { id: 'pick_form', :method => 'POST' } do |f|%>
  <%= f.hidden_field :column, value: '' %>
<% end %>

<% unless @board.winner.present?%>
  <script>
  $(document).ready(function(){
    $('div.empty-cell').click(function(){
      id  = this.id;
      id  = id.split("_");
      id  = id[id.length-1];
      $('#pick_column').val(id);
      $("#pick_form").submit();
      $("#pick_form").attr('action', window.location.href);
      $("#pick_form").attr('method', 'GET');
    });
  });
  </script>
<% end %>


